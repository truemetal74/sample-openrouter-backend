# Sample OpenRouter Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Required Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
SECRET_KEY=your_secret_key_here_make_it_long_and_random

# Application Metadata Configuration
APP_NAME=Sample OpenRouter Backend
APP_DESCRIPTION=FastAPI application for LLM interactions via OpenRouter
APP_VERSION=1.0.0

# OpenRouter Configuration
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODELS=["openai/gpt-4","openai/gpt-3.5-turbo","anthropic/claude-3-opus"]

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60
MAX_RETRIES=3
RETRY_DELAY_BASE=1.0

# Security Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=60

# HTTP Client Configuration
REQUEST_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_DETAILED_LOGGING=true
LOG_TEXT_TRUNCATE_LENGTH=500
SHOW_DETAILED_ERRORS=false
ENABLE_RESPONSE_DEBUG=false
STREAMING_RESPONSE_LOG_LEVEL=INFO
ERROR_RESPONSE_LOG_LEVEL=INFO
AGGRESSIVE_CONTENT_EXTRACTION=true

# Trusted IPs (IPs that bypass rate limiting)
TRUSTED_IPS=["127.0.0.1","::1"]

# CORS Configuration
CORS_ALLOW_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]
